@model TaskSite.MVC.Models.JobViewModel

@{
    ViewBag.Title = "AddJob";
}

<h2>Add Job</h2>


<div>
    <h3>Форма створення завдання</h3>
    @using (Html.BeginForm("AddJob", "Home", FormMethod.Post))
    {
        @Html.LabelFor(m => m.Name, "Enter Job Name")
        <br />
        @Html.TextBoxFor(m => m.Name)
        <br /><br />
        @Html.LabelFor(m => m.Time, "Enter Job Time")
        <br />
        @Html.TextBoxFor(m => m.Time)
        <br /><br />
        @Html.LabelFor(m => m.Priority, "Enter Job Priority")
        <br />
        @Html.TextBoxFor(m => m.Priority)
        <br /><br />
        @Html.LabelFor(m => m.Status, "Enter Job Status")
        <br />
        @Html.TextBoxFor(m => m.Status)
        <br /><br />
        @Html.DropDownList("workers_list", "Select Worker")
        <br /><br />
        <p><input type="submit" value="Send" /></p>
    }

</div>
@if (ViewBag.Message != null)
{
    <script type="text/javascript">
        window.onload = function () {
            alert("@ViewBag.Message");
        };
    </script>

}

@section Scripts {
    <script type="text/javascript">

        $(function () {
            $.ajaxSetup({ cache: false });
            $(".compItem").click(function (e) {

                e.preventDefault();
                $.get(this.href, function (data) {
                    $('#dialogContent').html(data);
                    $('#modDialog').modal('show');
                });
            });
        })
    </script>
}
