@model TaskSite.MVC.Models.WorkerViewModel

@{
    ViewBag.Title = "AddWorker";
}

<h2>Add Worker</h2>


<div>
    <h3>Форма додання робітника</h3>
    @using (Html.BeginForm("AddWorker", "Home", FormMethod.Post))
    {
        @Html.LabelFor(m => m.Name, "Enter worker name")
        <br />
        @Html.TextBoxFor(m => m.Name)
        <br /><br />
        @Html.LabelFor(m => m.Busy, "Enter worker busy")
        <br />
        @Html.TextBoxFor(m => m.Busy)
        <br /><br /> <p><input type="submit" value="Send" /></p>
    }

</div>

@if (ViewBag.Message != null)
{
    <script type="text/javascript">
        window.onload = function () {
            alert("@ViewBag.Message");
        };
    </script>}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
